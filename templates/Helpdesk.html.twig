<!doctype html>
<html>
    <head>
        {% include "Header.html.twig" %}
    </head>

    <body>
        {% include "Navbar.html.twig" %}
        {% include "Login.html.twig" %}
        {% include "Signup.html.twig" %}
        {% set i = 0 %}

            <div class="container">
            
            <br>
            <div class="alert alert-dark" id="messagehelpdesk-alert" role="alert" style="display: none;">
            </div>
            
            {% if user.role == "Adminstrátor" %}
            
                {% for helpdeskMessage in helpdeskMessages %}
                    {% if not helpdeskMessage.ID == null %}
                        <div class="card">
                            <div class="card-header bg-dark" id="headingTwo">
                            <h5 class="mb-1">  <a class="text-white">Předmět: {{ helpdeskMessage.Title_message }}</a>
                            </h5>
                            </div>

                            <div id="collapsehd{{ helpdeskMessage.ID }}" class="bg-dark" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body text-white bg-dark mb-3">
                                <h6>Odesílatel: {{ messageSenders[i] }}</h6>
                                <h6>Datum: {{ helpdeskMessage.date }}</h6>
                                <br>
                                <h6>Zpráva:</h6>
                                {{ helpdeskMessage.Text_message }}
                            </div>
                            </div>
                        </div>
                    {% endif %}
                {% set i = i + 1 %}
                {% endfor %}

            {% else %}
            <div class="form-group">
                 <div class="form-group">
                 <label for="message-sendto">Příjemce:</label>
                    <select class="form-control" id="message-sendto" style="width: 300px;">
                    <option id="5">admin@redakce.vspj.cz</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="message-subject">Předmět:</label>
                <input type="text" class="form-control" id="message-subject" style="width: 300px;">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="message-message" rows="3" placeholder="Zpráva"></textarea>
            </div>
            <button id="btn-sendmessagehelpdesk" class="btn btn-dark">Odeslat</button>
            {% endif %}
            </div>
       
        {% include "Footer.html.twig" %}
    </body>
</html>