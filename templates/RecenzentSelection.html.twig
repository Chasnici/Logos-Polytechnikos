<div id="recenzentselection" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Recenzent</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
      <div class="form-group">
      <div class="alert alert-dark" id="reviewerselection-alert" role="alert" style="display: none;">
      </div>
          <label for="role">Recenzent:</label>
          <select class="form-control" id="reviewer-input">
          {% for reviewer in reviewers %}
            <option id="{{ reviewer.ID }}" selected>{{ reviewer.Login_name }}</option>
          {% endfor %}
          </select>
      </div>
      <button type="submit" name="" id="btn-select-reviewer" class="btn btn-dark pull-right">Potvrdit</button>
      <button type="button" class="btn btn-dark pull-right" data-dismiss="modal">Zavřít</button>
      </div>
    </div>
  </div>
</div>