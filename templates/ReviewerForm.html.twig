<div id="reviewerform" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Recenze článku</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
      <div class="alert alert-dark" id="review-alert" role="alert" style="display: none;">
      </div>
      <div class="form-group">
          <label for="role">Aktuálnost:</label>
          <select class="form-control" id="recency-input">
            <option selected>1</option>
            <option >2</option>
            <option >3</option>
            <option >4</option>
            <option >5</option>
          </select>

          <label for="role">Zajímavost:</label>
          <select class="form-control" id="interesting-input">
            <option selected>1</option>
            <option >2</option>
            <option >3</option>
            <option >4</option>
            <option >5</option>
          </select>

          <label for="role">Originalita:</label>
          <select class="form-control" id="originality-input">
            <option selected>1</option>
            <option >2</option>
            <option >3</option>
            <option >4</option>
            <option >5</option>
          </select>

          <label for="role">Profesionální úroveň:</label>
          <select class="form-control" id="professional-input">
            <option selected>1</option>
            <option >2</option>
            <option >3</option>
            <option >4</option>
            <option >5</option>
          </select>

          <label for="role">Jazyková a stylistická úroveň:</label>
          <select class="form-control" id="stylistic-input">
            <option selected>1</option>
            <option >2</option>
            <option >3</option>
            <option >4</option>
            <option >5</option>
          </select>
      </div>
      <button type="submit" name="" id="btn-review-confirm" class="btn btn-dark pull-right">Potvrdit</button>
      <button type="button" name="" class="btn btn-dark pull-right" data-dismiss="modal">Zavřít</button>
      </div>
    </div>
  </div>
</div>